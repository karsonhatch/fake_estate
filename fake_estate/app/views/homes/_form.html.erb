<%= form_for [@seller, @home] do |f| %>

	<%= f.label :bedroom %>
	<%= f.select(:bedroom, (1..20), :prompt => 'choose one')%>
<br />

	<%= f.label :bath %>
	<%= f.select(:bath, [1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5, 5], :prompt => 'choose one') %>
<br />

	<%= f.label :sqft %>
	<%= f.number_field(:sqft, min:0, max:10000) %>
<br />

	<%= f.label :style %>
	<%= f.select(:style, ['Rambler', 'Split-level', 'Townhome', 'Condo'], :prompt => 'choose one') %>
<br />
	<%= f.label :story %>
	<%= f.number_field(:story, min:1, max:5 )%>
<br />

	<%= f.label :sold %>
	<%= f.select(:sold, ['false', 'true']) %>

<br />
	<%= f.label :price %>
	<%= f.number_field(:price, min:0, max:1000000) %>
<br />
	<%= f.submit %>

<% end %>